{
    "manifest_version": 3,
    "name": "Deepgram Tab Capture",
    "version": "1.0",
    "description": "Captures tab audio and streams to local Deepgram server",
    "permissions": [
        "tabCapture",
        "offscreen",
        "activeTab",
        "sidePanel"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_title": "Open HR Assistant"
    },
    "side_panel": {
        "default_path": "popup.html"
    }
}